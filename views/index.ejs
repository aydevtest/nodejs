<html>

<head>
  <title>HTML Page Title</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>



<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10">
      <form  action="/create" method="post">
        <input class="block px-5 py-2 w-full" type="text" placeholder="Title goes here" name="title">
        <textarea class="block px-5 py-2 mt-2 w-full resize-none" placeholder="message" name="details"></textarea>
        <input class="mt-2 text-white rounded bg-blue-600 px-5 py-2" type="submit" value="create task">
      </form>
    </div>
    <div class="task p-10 flex gap-3">

      <% if(files.length > 0){ %>

        <% files.forEach(function(val){ %>

          <div class="task w-72 px-3 py-2 rounded-md bg-zinc-700">
            <h1 class="text-white text-3xl tracking-tighter"> <%= val %></h1>
            <a class="text-blue-500 inline-block mt-3" href="/file/<%= val %>">read more</a>
            <a class="text-white inline-block mt-3" href="/edit/<%= val %>">edit</a>
          </div>

          <% }) %>

      <% } else { %>
        
        <h3 class="text-white"> no task yet</h3>

      <% } %>


     
    </div>
  </div>
</body>

</html>